<h1>New Entity</h1>


<%= form_tag(entities_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :kind %><br />
    <%= text_field_tag :kind %>
  </div>

  <div>
    <%= label_tag :location %><br />
    <%= text_field_tag :location %>
  </div>

  <div>
    <%= label_tag :status %><br />
    <%= text_field_tag :status %>
  </div>

  <div>
    <%= label_tag :perma %><br />
    <%= text_field_tag :perma %>
  </div>

  <div>
    <%= label_tag :industry_id %><br />
    <%= number_field_tag :industry_id %>
  </div>


  <div>
    <%= submit_tag "Create Entity" %>
  </div>
<% end %>
