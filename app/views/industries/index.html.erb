<h1>Industries</h1>

<p><%= link_to 'Add a New Industry', new_industry_url %></p>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @industries.each do |industry| %>
    <tr>
      <td><%= industry.category %></td>
  
      <td><%= link_to 'Show', industry_url(industry) %></td>
      <td><%= link_to 'Edit', edit_industry_url(industry) %></td>
      <td><%= link_to 'Destroy', industry_url(industry), method: 'delete', data: { confirm: "Do you really want to delete this industry?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

